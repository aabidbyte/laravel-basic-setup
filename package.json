{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "format:php": "composer run pint",
        "format:blade": "blade-formatter \"resources/views/**/*.blade.php\" \"app/**/*.blade.php\" -w",
        "format:js": "prettier --write \"resources/js/**/*.js\"",
        "format:all": "npm run format:php && npm run format:blade && npm run format:js"
    },
    "dependencies": {
        "@alpinejs/anchor": "^3.15.3",
        "@alpinejs/focus": "^3.15.3",
        "@tailwindcss/vite": "^4.1.11",
        "autoprefixer": "^10.4.20",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0",
        "tailwindcss": "^4.0.7",
        "vite": "^7.0.4"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    },
    "devDependencies": {
        "blade-formatter": "^1.44.2",
        "daisyui": "^5.5.13",
        "laravel-echo": "^2.2.6",
        "prettier": "^3.7.4",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "pusher-js": "^8.4.0"
    }
}
