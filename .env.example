# Vehicle Handover App - Environment Configuration
# Copy this file to .env and update the values for your environment

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="AABID BYTE SASS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Supported locales: en_US, de_DE
APP_LOCALE=en_US
APP_FALLBACK_LOCALE=en_US

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_CONNECTION=
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# ===========================================
# MAIL CONFIGURATION
# ===========================================

# Mail Driver Switch
# Options: 'mailpit' (local dev) or 'smtp' (real email)
MAIL_MAILER=mailpit

# Mailpit Configuration (when MAIL_MAILER=mailpit)
MAILPIT_HOST=127.0.0.1
MAILPIT_PORT=1025

# SMTP Configuration (when MAIL_MAILER=smtp)
# Use standard Laravel env vars - works with Gmail, SendGrid, etc.
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_TIMEOUT=30

# Common Settings (applies to both)
MAIL_FROM_ADDRESS=dev@aabidbyte.local
MAIL_FROM_NAME="${APP_NAME}"

# Development Email Protection (prevents accidental emails to real users)
MAIL_DEV_REDIRECT_ENABLED=true
MAIL_DEV_REDIRECT_TO=dev@example.com,admin@example.com
MAIL_DEV_REDIRECT_TO_ROLES=superAdmin

# ===========================================
# DEV SEEEDERS
# ===========================================
SUPER_ADMIN_EMAILS=admin1@example.com,admin2@example.com,admin3@example.com

# ===========================================
# EMAIL RATE LIMITING
# ===========================================
# Email rate limiting is configured in app/Services/EmailRateLimiterService.php
# Uses Redis for storage with automatic expiry (no cleanup needed)
# Rate limits apply per email address and per email type
#
# Current limits:
# - Password Reset: 3 per 5min, 5 per hour
# - User Activation: 3 per 5min, 5 per hour
# - Email Verification: 3 per 5min, 5 per hour
# - User Welcome: 2 per 5min, 3 per hour
#
# Excluded (never rate-limited):
# - Handover Completed emails
# - Test Mail emails
#
# Admin override: php artisan email:clear-rate-limit user@example.com


# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379

# ===========================================
# BROADCASTING (WebSockets)
# ===========================================
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=vehicle-handover
REVERB_APP_KEY=local-key
REVERB_APP_SECRET=local-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# ===========================================
# FILE STORAGE
# ===========================================
FILESYSTEM_DISK=local

# ===========================================
# TELESCOPE (Debugging)
# ===========================================
TELESCOPE_ENABLED=true

# ===========================================
# PRODUCTION SEEDER CREDENTIALS
# ===========================================
# These are required in production environment for security
# Leave empty in development - fallback passwords will be used
SUPER_ADMIN_PASSWORD=
GOOGLE_TEST_ADMIN_PASSWORD=

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Google Maps API (for reverse geocoding)
GOOGLE_MAPS_API_KEY=

# Slack Notifications (optional)
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Vite Development Server
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# SECURITY
# ===========================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# ===========================================
# MOBILE API
# ===========================================

# Mobile API Rate Limiting
MOBILE_API_RATE_LIMIT=100
MOBILE_API_RATE_LIMIT_WINDOW=60

# ===========================================
# TESTING
# ===========================================

# Test Database (for PHPUnit)
DB_TEST_CONNECTION=sqlite
DB_TEST_DATABASE=:memory:

# ===========================================
# QUICK SETUP GUIDE
# ===========================================

# 1. Copy this file to .env
# 2. Generate application key: php artisan key:generate
# 3. Configure database credentials
# 4. For mail testing:
#    - Mailpit: Set MAIL_MAILER=mailpit and start mailpit
#    - Real SMTP: Set MAIL_MAILER=smtp and configure MAIL_HOST, MAIL_USERNAME, etc.
# 5. Run migrations: php artisan migrate:fresh --seed
# 6. Start development: composer run dev

# ===========================================
# PRODUCTION CHECKLIST
# ===========================================

# Before deploying to production:
# 1. Set APP_ENV=production
# 2. Set APP_DEBUG=false
# 3. Set MAIL_MAILER=smtp
# 4. Configure production SMTP credentials
# 5. Set strong passwords for SUPER_ADMIN_PASSWORD
# 6. Configure production database
# 7. Set up Redis for caching and queues
# 8. Configure file storage (S3 or local)
# 9. Set up SSL certificates
# 10. Configure monitoring and logging
