{
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "YOUR_API_KEY"
            ]
        },
        "shadcn": {
            "command": "npx",
            "args": [
                "shadcn@latest",
                "mcp"
            ]
        },
        "laravel-boost": {
            "command": "php",
            "args": [
                "/Users/hop/Packages/laravel-basic-setup/artisan",
                "boost:mcp"
            ]
        }
        //other mcp servers
    }
}

